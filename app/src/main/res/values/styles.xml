<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--MatchMatch style-->
    <style name="MatchMatchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--WMatchHWrap style-->
    <style name="WMatchHWrapStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--WrapWrap style-->
    <style name="WrapWrapStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--TextTitleSTyle-->
    <style name="TextTitleStyle" parent="WrapWrapStyle">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!--ViewLine style-->
    <style name="VerticalViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_line_height</item>
        <item name="android:layout_marginTop">@dimen/ten_dp_margin</item>
        <item name="android:layout_marginBottom">@dimen/ten_dp_margin</item>
        <item name="android:background">@color/singleColor</item>
    </style>
    <style name="HorizontalViewLineStyle">
        <item name="android:layout_width">@dimen/view_line_height</item>
       <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/ten_dp_margin</item>
        <item name="android:layout_marginRight">@dimen/ten_dp_margin</item>
        <item name="android:background">@color/singleColor</item>
    </style>
</resources>
