<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WrapWrapStyle"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="@dimen/image_dim"
        android:layout_height="@dimen/image_dim"
        android:layout_marginLeft="@dimen/ten_dp_margin"
        android:layout_marginRight="@dimen/ten_dp_margin"
        tools:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/recipe_name"
        style="@style/WrapWrapStyle"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_title_size"
        tools:text="Recipe's name" />

</LinearLayout>