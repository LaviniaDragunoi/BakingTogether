<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatchStyle">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipes_recycler_view"
        style="@style/MatchMatchStyle" />

    <ProgressBar
        android:id="@+id/recipes_progress_bar"
        style="@style/WrapWrapStyle"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/error_loading_recipes"
        style="@style/WrapWrapStyle"
        android:layout_gravity="center"
        android:drawableBottom="@drawable/ic_local_dining_black_24dp"
        android:drawablePadding="@dimen/ten_dp_margin"
        android:text="@string/error_loading_mess"
        android:textSize="@dimen/text_title_size"
        android:visibility="invisible" />

</FrameLayout>